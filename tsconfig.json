{
    "compileOnSave": false,
    "include": ["src"],
    "compilerOptions": {
        "outDir": "lib",
        "target": "es5",
        "module": "es2015",
        "strict": true,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "declaration": true,
        "declarationDir": "types",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib":["dom", "es2018"],
        "types": [
            "jest",
            "node"
        ],
        "baseUrl": "."
    }
}
